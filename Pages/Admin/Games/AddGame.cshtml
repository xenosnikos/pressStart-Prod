@page
@model PressStart.Pages.Admin.Games.AddGameModel
@{
}
<h1>Add a Game</h1>
<div class="mt-3">
  <form method="POST" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="AddGame">

    <div class="form-group row">
      <label asp-for="GameName" class="col-sm-2 col-form-label">Game Name</label>
      <div class="col-sm-10">
        <input asp-for="GameName" class="form-control" />
        <span asp-validation-for="GameName"></span>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="types">Game Type</label>
      <div class="col-sm-10">
        <select class="form-control" id="type"  asp-for="GameType">
          <option value="NES">NES</option>
        </select>
      </div>
    </div>


    <div class="form-group row">
      <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description"></span>
      </div>
    </div>

    <div class="form-group row">

      <label asp-for="UploadThumb" class="col-sm-2 col-form-label">
        <p>Upload Thumbail</p>
      </label>
      <input  asp-for="UploadThumb" type="file" name="thumbnail" />
    </div>
    
    <div class="form-group row">

      <label asp-for="UploadRom" class="col-sm-2 col-form-label">
        <p>Upload Game Rom</p>
      </label>
      <input  asp-for="UploadRom" type="file" name="romfile" />
    </div>

    <input class="btn btn-primary" type="submit" value="Upload" />

  </form>
</div>